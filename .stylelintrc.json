{
  "plugins": ["stylelint-scss"],
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "scss/dollar-variable-pattern": "^[a-z_]+$",
    "selector-class-pattern": "^[a-z]([a-z0-9-]+)?(_([a-z0-9]+-?)+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$"
  },
  "ignoreFiles": [
    "dist/*"
  ]
} 
